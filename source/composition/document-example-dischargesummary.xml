          <coding>
            <system value="http://snomed.info/sct"/>
            <code value="66493003"/>
          </coding>
          <text value="Theophylline 200mg"/>
        </medicationCodeableConcept>
        <dosageInstruction>
          <additionalInstructions>
            <text value="Take with Food"/>
          </additionalInstructions>
        <!--   twice a day   -->
          <timing>
            <repeat>
              <frequency value="2"/>
              <period value="1"/>
              <periodUnits value="d"/>
            </repeat>
          </timing>
        <!--   Orally   -->
