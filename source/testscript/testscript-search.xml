			<operation>
				<type>
					<code value="search"/>
				</type>
				<accept value="json"/>
				<responseId value="R2"/>
				<url value="${V1}"/>
			</operation>
		</action>
		<action>
			<assert>
				<contentType value="json"/>
			</assert>
		</action>
		<action>
			<assert>
				<response value="okay"/>
			</assert>
		</action>
						
