			<operation>
				<type>
					<code value="search"/>
				</type>
				<resource value="Patient"/>
				<accept value="json"/>
				<params value="?given=John&amp;family=Doe&amp;birthdate=1974-12-31"/>
				<responseId value="R3"/>
			</operation>
		</action>	
		<action>
			<assert>
				<contentType value="json"/>
			</assert>
		</action>
		<action>
